<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"   
    xmlns="http://java.sun.com/xml/ns/javaee"   
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">  
 
    <!-- Configure the access of IndexServlet -->
	<servlet>
		<!-- Set the name of Servlet-->
		<servlet-name>index</servlet-name>
		<!-- Set the servlet class that processing requests: complete package path + class name -->
		<servlet-class>web.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- The Servlet name should keep consistent as above-mentioned -->
		<servlet-name>index</servlet-name>
		<!-- The access path of Servlet -->
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	
	<!-- Configure the access of ToRegisterServlet -->
	<servlet>
		<!-- Set the name of Servlet -->
		<servlet-name>toRegister</servlet-name>
		<!-- Set the servlet class that processing requests: complete package path + class name -->
		<servlet-class>web.ToRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- The Servlet name should keep consistent as above-mentioned -->
		<servlet-name>toRegister</servlet-name>
		<!-- The access path of Servlet -->
		<url-pattern>/toRegister</url-pattern>
	</servlet-mapping>
	
	<!-- Configure the access of RegisterServlet-->
	<servlet>
		<!-- Set the name of Servlet -->
		<servlet-name>register</servlet-name>
		<!-- Set the servlet class that processing requests: complete package path + class name -->
		<servlet-class>web.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- The Servlet name should keep consistent as above-mentioned -->
		<servlet-name>register</servlet-name>
		<!-- The access path of Servlet -->
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
</web-app>  